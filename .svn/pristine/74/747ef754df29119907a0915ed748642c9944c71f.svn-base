	/**
	 * 更新员工状态
	 * 
	 * @param empId
	 *            员工ID
	 * @param state
	 *            状态
	 * @return
	 */
	public int update(Integer empId, Integer state) {
		try {
			// 找到empId员工
			for (Employee employee : employees) {
				if (empId == employee.getEmpId()) {
					employee.setState(state);
				}
			}
		} catch (Exception e) {
			e.printStackTrace();
			return 0;
		}
		return 1;
	}

