@Data
@EqualsAndHashCode(callSuper = false)
public class SaleCommodityRequest extends BaseRequest {
	private short requestId = RolePlayProtocolConstant.SALE_COMMODITY_REQUEST_PROTOCOL;
	// 商品类型
	private int commodityType;
	// 商品数量
	private int commodityCount;
	
	public SaleCommodityRequest(ByteBuf buf) {
		super(buf);
		commodityType = buf.readInt();
		commodityCount =  buf.readInt() ;
	}

