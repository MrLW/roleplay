 * @version 1.0
 */

@HandlerEntity(id=RolePlayProtocolConstant.EQUIPMENT_LIST_REQUEST_PROTOCOL,desc="设备列表处理")
public class EquipmentListHandler extends BaseHandler {

	public void run() {
		// 获取公司所有仓库
		Room room = RoomManager.getNewRoomByCtx(ctx);
		List<Equipment> equipments = room.getEquipments();
		// 创建响应
		EquipmentListResponse response = new EquipmentListResponse(ctx);
		response.setEquipments(equipments);
		response.writeAndFlush();
	}

	@Override
	public Object clone() {
		EquipmentListHandler handler = new EquipmentListHandler();
		handler.baseRequest = this.baseRequest;
		handler.ctx = this.ctx;
		handler.channel = this.channel;
		return handler;
	}

}
