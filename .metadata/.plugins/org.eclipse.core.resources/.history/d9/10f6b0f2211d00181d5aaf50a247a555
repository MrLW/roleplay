package com.sim.server.game.roleplay.handler.hr;

import com.sim.server.game.common.RolePlayProtocolConstant;
import com.sim.server.game.engine.core.HandlerEntity;
import com.sim.server.game.engine.handler.BaseHandler;
import com.sim.server.game.roleplay.manager.RoomManager;
import com.sim.server.game.roleplay.player.HRManager;
import com.sim.server.game.roleplay.room.Room;
/**
 * @author liwen
 * @date:2017年12月26日 下午6:11:48
 * @Function: 员工列表请求处理
 * @version 1.0
 */
@HandlerEntity(id=RolePlayProtocolConstant.EMPLOYEE_LIST_REQUEST_PROTOCOL,desc="员工列表请求处理")
public class EmployeeListHandler extends BaseHandler {

	public void run() {
		// 获取员工列表
		Room room = RoomManager.getNewRoomByCtx(channel);
		HRManager hrManager = (HRManager) room.getHRManager();
		hrManager.writeEmployees(ctx);
	}
	
	@Override
	public Object clone() {
		EmployeeListHandler handler = new EmployeeListHandler();
		handler.baseRequest = this.baseRequest;
		handler.ctx = this.ctx;
		handler.channel = this.channel;
		return handler;
	}

}
